<resources>

    <style name="Style.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/md_theme_primary</item>
    </style>

    <style name="Style.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="paddingLeftSystemWindowInsets">false</item>
        <item name="paddingRightSystemWindowInsets">false</item>
        <item name="paddingBottomSystemWindowInsets">false</item>
        <item name="bottomSheetStyle">@style/Style.BottomSheetStyle</item>
    </style>

    <style name="Style.BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/Shape.BottomSheetCorner</item>
    </style>

    <style name="Shape.BottomSheetCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Shape.RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Style.ActionMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownVerticalOffset">6dp</item>
        <item name="android:dropDownHorizontalOffset">-6dp</item>
    </style>

    <style name="Style.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">42dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>
