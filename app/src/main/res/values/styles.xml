<resources>

    <dimen name="net_speed_icon_padding">5dp</dimen>
    <dimen name="percent_preference_icon_size">40dp</dimen>

    <integer name="config_navAnimTime">300</integer>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
<!--        <item name="colorPrimaryDark">@color/primaryDarkColor</item>-->
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>

        <item name="colorContainer">@color/primaryLightColor</item>
        <item name="colorPrimaryContainer">@color/primaryLightColor</item>
        <item name="colorSecondaryContainer">@color/secondaryLightColor</item>

        <!-- Panel attributes -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionOverflowMenuStyle">@style/ActionMenuStyle</item>

        <item name="android:listPreferredItemPaddingStart">16dp</item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>

        <item name="materialCardViewStyle">?attr/materialCardViewElevatedStyle</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="popupMenuStyle">@style/PopuMenuStyle</item>
    </style>

    <style name="ToolTipStyle" parent="Widget.Material3.Tooltip">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ActionMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownVerticalOffset">6dp</item>
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>

    <style name="PopuMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
    </style>

</resources>
