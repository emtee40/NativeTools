<resources>

    <dimen name="net_speed_icon_padding">5dp</dimen>
    <dimen name="percent_preference_icon_size">40dp</dimen>

    <integer name="config_navAnimTime">300</integer>

    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
<!--        <item name="colorPrimaryDark">@color/primaryDarkColor</item>-->
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>

        <item name="colorContainer">@color/primaryLightColor</item>
        <item name="colorSecondaryContainer">@color/secondaryLightColor</item>

        <!-- Panel attributes -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="android:listPreferredItemPaddingStart">16dp</item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>

        <item name="cornerFamily">rounded</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceComponent.LargeCornerSize
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearanceComponent.LargeCornerSize
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearanceComponent.MediumCornerSize
        </item>

        <item name="materialCardViewStyle">?attr/materialCardViewElevatedStyle</item>
        <item name="switchStyle">@style/Widget.AppCompat.CompoundButton.Switch</item>
    </style>

    <style name="ToolTipStyle" parent="Widget.Material3.Tooltip">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="OverflowMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">6dp</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorControlNormal</item>
    </style>

    <style name="ShapeAppearanceComponent.MediumCornerSize" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceComponent.LargeCornerSize" parent="">
        <item name="cornerSize">16dp</item>
    </style>

</resources>
