<resources xmlns:tools="http://schemas.android.com/tools">

    <dimen name="percent_preference_icon_size">40dp</dimen>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackgroundFallback" tools:targetApi="n">
            @drawable/layer_window_bg
        </item>

        <item name="colorPrimary">@color/primaryColor</item>
        <!-- <item name="colorPrimaryDark">@color/primaryDarkColor</item> -->
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/primaryColor</item>

        <item name="colorContainer">@color/primaryLightColor</item>
        <item name="colorPrimaryContainer">@color/primaryLightColor</item>
        <item name="colorSecondaryContainer">@color/secondaryLightColor</item>

        <!-- Panel attributes -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionOverflowMenuStyle">@style/ActionMenuStyle</item>

        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="android:listPreferredItemPaddingStart">16dp</item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>

        <item name="materialCardViewStyle">?attr/materialCardViewElevatedStyle</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
        <item name="popupMenuStyle">@style/Widget.Material3.PopupMenu</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">?attr/colorControlNormal</item>
    </style>

    <style name="ActionMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:dropDownVerticalOffset">6dp</item>
        <item name="android:dropDownHorizontalOffset">-6dp</item>
    </style>

</resources>
